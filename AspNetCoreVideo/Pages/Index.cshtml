@page
@model AspNetCoreVideo.tuseTheProgrammer.IndexModel
@{
    ViewData["Title"] = "Home";
}


@if (Model.ListOfEmployees.Any())
{
    <div class="row mt-3">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 table-responsive">

            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <td>
                            Employee Name
                        </td>
                        <td>
                            Employee Department
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var result = Model.ListOfEmployees
                                         .FirstOrDefault(x => x.Department.DepartmentName == "HR");
                        <tr>
                            <td>
                                @result.Name
                            </td>
                            <td>
                                @result.Department.DepartmentName
                            </td>
                        </tr>

                    }
                </tbody>


            </table>
        </div>
    </div>


}
else
{
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="card-deck">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1>
                        No record yet to be display.
                    </h1>
                </div>
                <div class="card-body">
                    <h3 class="card-text">
                        Use the button below to create new record.
                    </h3>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12">
                            <a asp-page="Create" class="btn btn-primary w-100">
                                Create new record
                            </a>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>

}